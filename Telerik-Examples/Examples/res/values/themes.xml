<?xml version="1.0" encoding="utf-8"?>

<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar"></style>


    <style name="DarkTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/ExamplesActivityActionBar</item>
        <item name="android:actionBarDivider">@drawable/tab_divider</item>
        <item name="scrollingTabViewStyle">@style/ScrollingTabViewStyle</item>
        <item name="scrollingTabStyle">@style/BarTabHorizontal</item>
    </style>

    <style name="DarkThemeLandscape" parent="DarkTheme">
        <item name="scrollingTabStyle">@style/BarTabVertical</item>
    </style>

    <style name="ExampleGroupDarkTheme" parent="DarkTheme">
        <item name="android:actionBarStyle">@style/MainActivityActionBar</item>
        <item name="scrollingTabViewStyle">@style/ExampleGroupScrollingTabViewStyle</item>
        <item name="scrollingTabStyle">@style/ExampleGroupBarTabHorizontal</item>
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>

    <style name="BrandedActionBarTheme" parent="DarkTheme">
        <item name="android:actionBarStyle">@style/MainActivityActionBar</item>
        <item name="android:actionBarWidgetTheme">@style/AppTheme</item>
        <item name="android:actionDropDownStyle">@style/SpinnerDropDownStyle</item>
    </style>

</resources>